  <script>
    // Saat ve tarih
    function updateClock() {
      const now = new Date();
      const options = { hour: '2-digit', minute: '2-digit' };
      document.getElementById('clock').textContent = now.toLocaleTimeString('tr-TR', options);
      document.getElementById('date').textContent = now.toLocaleDateString('tr-TR');
    }
    setInterval(updateClock, 1000);
    updateClock();

    // Takvim
    function generateCalendar() {
      const today = new Date();
      const year = today.getFullYear();
      const month = today.getMonth();
      const monthNames = ['Ocak', '≈ûubat', 'Mart', 'Nisan', 'Mayƒ±s', 'Haziran', 'Temmuz', 'Aƒüustos', 'Eyl√ºl', 'Ekim', 'Kasƒ±m', 'Aralƒ±k'];
      document.getElementById('calendarTitle').textContent = `${monthNames[month]} ${year}`;

      const firstDay = new Date(year, month, 1).getDay();
      const daysInMonth = new Date(year, month + 1, 0).getDate();
      const weekDays = ['Pt', 'Sa', '√áa', 'Pe', 'Cu', 'Ct', 'Pz'];

      let table = '<table><tr>';
      for (let d of weekDays) {
        table += `<td><b>${d}</b></td>`;
      }
      table += '</tr><tr>';

      let day = 1;
      let startDay = (firstDay === 0) ? 6 : firstDay - 1;

      for (let i = 0; i < 6; i++) {
        for (let j = 0; j < 7; j++) {
          if (i === 0 && j < startDay) {
            table += '<td></td>';
          } else if (day > daysInMonth) {
            table += '<td></td>';
          } else {
            table += `<td>${day}</td>`;
            day++;
          }
        }
        table += '</tr>';
        if (day > daysInMonth) break;
        else table += '<tr>';
      }
      table += '</table>';
      document.getElementById('calendar').innerHTML = table;
    }
    generateCalendar();

    // Kurlar
    async function fetchRates() {
      try {
        const response = await fetch('https://api.exchangerate-api.com/v4/latest/USD');
        const data = await response.json();
        const tryRate = data.rates.TRY;
        const euroRate = (data.rates.TRY / data.rates.EUR);
        document.getElementById('dollar').textContent = `üíµ 1 USD = ${tryRate.toFixed(2)} TRY`;
        document.getElementById('euro').textContent = `üí∂ 1 EUR = ${euroRate.toFixed(2)} TRY`;
      } catch (error) {
        document.getElementById('dollar').textContent = 'D√∂viz alƒ±namadƒ±';
        document.getElementById('euro').textContent = '';
      }
    }
    fetchRates();

    // Hava durumu
    async function fetchWeather() {
      try {
        const response = await fetch('https://wttr.in/Istanbul?format=%t+%c');
        const text = await response.text();
        document.getElementById('weather').textContent = `ƒ∞stanbul: ${text}`;
      } catch (error) {
        document.getElementById('weather').textContent = 'Hava alƒ±namadƒ±';
      }
    }
    fetchWeather();

    // √ñzl√º s√∂zler
    const quotes = [
      { en: "The truest guide in life is science.", tr: "Hayatta en hakiki m√ºr≈üit ilimdir." },
      { en: "Punishment for speaking without thinking is to think later.", tr: "D√º≈ü√ºnmeden konu≈ümanƒ±n cezasƒ±, sonradan d√º≈ü√ºnmeye mahkum olmaktƒ±r." }
    ];
    function showQuote() {
      const randomIndex = Math.floor(Math.random() * quotes.length);
      const quote = quotes[randomIndex];
      document.getElementById('quote').innerHTML = `<div>${quote.en}</div><div>${quote.tr}</div>`;
    }
    showQuote();

    // Kelimeler
    const words = [
      { en: "courage", tr: "cesaret" },
      { en: "focus", tr: "odaklanmak" },
      { en: "growth", tr: "b√ºy√ºme" },
      { en: "strength", tr: "g√º√ß" },
      { en: "patience", tr: "sabƒ±r" }
    ];
    function showWords() {
      const randomWords = [];
      while (randomWords.length < 2) {
        const randomIndex = Math.floor(Math.random() * words.length);
        const word = words[randomIndex];
        if (!randomWords.includes(word)) {
          randomWords.push(word);
        }
      }
      document.getElementById('word').innerHTML = randomWords.map(w => `<div><strong>${w.en}</strong> - ${w.tr}</div>`).join('');
    }
    showWords();

    // Haberler
    async function fetchNews() {
      try {
        const response = await fetch('https://api.rss2json.com/v1/api.json?rss_url=https://www.ntv.com.tr/gundem.rss');
        const data = await response.json();
        const newsList = document.getElementById('newsList');
        newsList.innerHTML = '';

        data.items.slice(0, 3).forEach(item => {
          const li = document.createElement('li');
          li.textContent = item.title;
          newsList.appendChild(li);
        });
      } catch (error) {
        document.getElementById('newsList').innerHTML = '<li>Haberler alƒ±namadƒ±</li>';
      }
    }
    fetchNews();
  </script>
